<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GallaryApp.Pages.PinPage">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout">
            <Label Text="Введите пароль:" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10"/>
            <Entry x:Name="PinEntry" IsPassword="True" Keyboard="Numeric" Margin="30,0,30,10"/>
            <Button x:Name="SavePinButton" Text="Save PIN" Clicked="SaveButton_Clicked" Margin="30,0,30,10"/>
            <Label x:Name="MessageLabel" Text="" FontSize="Medium" TextColor="Red" HorizontalOptions="Center"/>
            <Button x:Name="LoginBtn" Text="Login" Clicked="Login_Clicked" Margin="30,0,30,10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>